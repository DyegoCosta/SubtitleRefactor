@model SubRefactor.Models.SubtitleSynchronizationViewModel
@{
    ViewBag.Title = "Synchronization";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script language="javascript" src="@Url.Content("~/Scripts/jQuery/jquery.ui.mouse.min.js")" type="text/javascript"/>
<script language="javascript" src="@Url.Content("~/Scripts/jQuery/jquery.ui.slider.min.js")" type="text/javascript"/>

<script type="text/javascript" language="javascript">
    $(function () {
        $("#slider-range-min").slider({
            range: "min",
            value: 0,
            min: -10000,
            max: 10000,
            slide: function (event, ui) {
                $("#Delay").val(ui.value);
            }
        });
        $("#Delay").val($("#slider-range-min").slider("value"));
        $("#Delay").change(function () {
            $("#slider-range-min").slider("value", this.value);
        });
    });
</script>

@if (HttpContext.Current.Session["Subtitle"] == null)
{     
    @SubtitleHelper.SubtitleUploadHelper("")
}

<div class="content">
        @using (Html.BeginForm("Synchronize", "Subtitle", FormMethod.Post, new { enctype = "multipart/form-data" }))
        { 
            <p>
                @Html.Raw("Subtitle: ") <input type="file" id="File" name="File" />
                @Html.ValidationMessageFor(model => model.File)
            </p>
            <p>
                @Html.Raw("Time (milliseconds): ") @Html.TextBoxFor(m => m.Delay)
                @Html.ValidationMessageFor(model => model.Delay)
            </p>        
            <br/>
            <div id="slider-range-min">
            </div>
            <br/>
            <p>
                <input type="submit" value="Syncronize" />
            </p>            
        }
</div>